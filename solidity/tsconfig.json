{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./"
    },
    "include": [
        "./hardhat.config.ts",
        "./test/**/*",
        "./scripts/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "./hardhat.config.ts"
    ]
}